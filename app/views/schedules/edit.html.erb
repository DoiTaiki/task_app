<h2>スケジュール編集</h2>

<%= render "shared/error", obj:@schedule %>

<%= form_for @schedule do |f| %>
  <table>
    <tr>
      <th><%= f.label :title, "タイトル" %></th>
      <td><%= f.text_field :title %></td>
    </tr>
    <tr>
      <th><%= f.label :start_day, "開始日" %></th>
      <td><%= f.datetime_select :start_day, minute_step: 10 %></td>
    </tr>
    <tr>
      <th><%= f.label :end_day, "終了日" %></th>
      <td><%= f.datetime_select :end_day, minute_step: 10 %></td>
    </tr>
    <tr>
      <th><%= f.label :all_day, "終日" %></th>
      <td><%= f.check_box  :all_day, {checked: false}, true, false %>終日の場合はチェックします</td>
    </tr>
    <tr>
      <th><%= f.label :memo, "スケジュールメモ" %></th>
      <td><%= f.text_area :memo %></td>
    </tr>
  </table>
  <p><%= f.submit "スケジュールの編集を完了する" %></p>
  <p><%= link_to "スケジュール一覧に戻る", schedules_path %></p>
<% end %>