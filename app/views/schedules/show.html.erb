<h2>スケジュール詳細</h2>
<table>
  <tr>
    <th>タイトル</th>
    <td><%= @schedule.title %></td>
  </tr>
  <tr>
    <th>開始日</th>
    <td><%= @schedule.start_day %></td>
  </tr>
  <tr>
    <th>投稿日時</th>
    <td><%= @schedule.end_day %></td>
  </tr>
  <tr>
    <th>終日</th>
    <td>
      <% if @schedule.all_day %>
        ○
      <% else %>
        ×
      <% end %>
    </td>
  </tr>
  <tr>
    <th>スケジュールメモ</th>
    <td><%= @schedule.memo %></td>
  </tr>
</table>
<p><%= link_to "スケジュール一覧に戻る", schedules_path %></p>
<p><%= link_to "スケジュールを編集する", edit_schedule_path(@schedule.id) %></p>
<p><%= link_to "スケジュールを削除", schedule_path(@schedule.id), method: :delete, data: { confirm: "本当に削除しますか？"}  %></p>